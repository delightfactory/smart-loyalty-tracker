{
  "version": 2,
  "functions": {
    "api/**/*.ts": { "runtime": "nodejs18.x" }
  },
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1.ts" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "crons": [
    {
      "path": "/api/backup",
      "schedule": "0 0 * * *"
    }
  ]
}
